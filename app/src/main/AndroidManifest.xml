<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="john.com.sudoko">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.MainActivity" android:configChanges="orientation|keyboardHidden|screenSize">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".Controller.CSVActivity" android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <activity android:name=".Controller.VocabsActivity" android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity android:name=".Controller.CSV_VocabsActivity" android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <activity android:name=".Controller.PointsActivity" android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
    </application>

</manifest>